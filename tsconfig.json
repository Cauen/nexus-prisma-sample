{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2016",
    "module": "commonjs",
    "lib": ["esnext"],
    "jsx": "react",
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
  },
  "include": ["**/*.ts"],
  "exclude": ["prisma/**/*"]
}
